{% extends 'base_back.html.twig' %}

{% block content %}

    <div class="container">
        <h1>{% if app.user %} Modification du profil {{ app.user.username }} {% endif %}</h1>

        {{ form_start(form) }}

        <div class="form-group">
            {{ form_label(form.avatar, 'Image à la une') }}
            {{ form_widget(form.avatar, {'attr': {'class': 'form-control-file'}}) }}
        </div>
        <div class="form-group">
            {{ form_rest(form, {'attr': {'class': 'form-control'}}) }}
        </div>


        <button type="submit" class="btn btn-success">Mettre à jour</button>

        {{ form_end(form) }}
    </div>


{% endblock %}